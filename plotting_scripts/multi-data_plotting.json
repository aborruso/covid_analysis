{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "simple vega-lite chart with linked data",
  "title": "Overlay of cases and lab testing",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/sirselim/covid_analysis/master/data/NZCOVID_confirmed_formatted.json"
      },
      "mark": {
        "opacity": 0.5,
        "type": "bar",
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Date of report",
          "type": "nominal",
          "axis": {
            "title": "Date"
          }
        },
        "y": {
          "aggregate": "count",
          "field": "Date of report",
          "type": "quantitative",
          "axis": {
            "title": "Number of cases"
          }
        },
        "color": {
          "value": "steelblue",
          "condition": {
            "test": {
              "field": "Date of report",
              "gt": "2020-03-26"
            },
            "value": "orange"
          }
        }
      }
    },
    {
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/sirselim/covid_analysis/master/data/NZ_testing_stats.json"
          },
          "mark": {
            "type": "line",
            "interpolate": "monotone",
            "tooltip": true,
            "point": { 
              "filled": false,
              "fill": "white"
            }
          },
          "encoding": {
            "x": {
              "field": "Date of report",
              "type": "nominal",
              "title": "Date"
            },
            "y": {
              "field": "Tests per Day",
              "type": "quantitative"
            },
            "color": { "value": "#025b96" }
          }
        }
      ]
    }
  ],
  "resolve": {
    "scale": {
      "y": "independent"
    }
  }
}
